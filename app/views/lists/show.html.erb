<div class="banner" style="background-image: url('<%= cl_image_path @list.photo.key %>')">
  <div class="title-text">
    <h2><%= @list.name %></h2>
  </div>
</div>

<div class="body-container">

  <div class="list-flex">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <%# <% movie = bookmark. %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%=  bookmark.movie.poster_url %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p><%= bookmark.movie.rating %></p>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p><strong>"</strong><%= bookmark.comment %></p>
          <%= link_to "delete", list_bookmarks_path(@list) , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
