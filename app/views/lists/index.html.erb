<div class="banner" style="background-image: url('felix-mooneeram-evlkOfkQ5rE-unsplash.jpg');">
  <div>
    <h2>Save any kind of movies</h2>
    <h4>Classic</h4>
  </div>
</div>

<div class="container">
  <div class="my-list-flex">
    <h4>My Lists</h4>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary"%>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="list-card">
          <%= link_to list_path(list) do %>
            <div class="list-card-image" style="background-image: url('<%= list.picture_url %>');">
              <div class="list-card-title">
                <h5><%= list.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
