<div class="banner" style="background-image: url( <%= asset_path 'felix-mooneeram-evlkOfkQ5rE-unsplash.jpg' %>);">
  <div class="title-text">
    <h2>Save any kind of movies</h2>
    <h4>Classic</h4>
  </div>
</div>

<div class="body-container">
  <div class="my-list-flex">
    <h4>My Lists</h4>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary"%>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="list-card">
          <%= link_to list_path(list) do %>
            <div class="list-card-image" style="background-image: url('<%= cl_image_path list.photo.key %>');">
              <div class="list-card-title">
                <h5 class="decoration-body title-text"><%= list.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
